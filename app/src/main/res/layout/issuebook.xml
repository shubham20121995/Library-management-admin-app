<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="#ff4081"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fillViewport="true"
        android:background="#FF03A9F4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5"
        android:background="#FF03A9F4">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"

        android:elevation="6dp"
        android:background="@drawable/linear_layout3"
        android:layout_margin="5dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/issue"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="2dp"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:id="@+id/issue_t1"
            android:background="@drawable/barcode" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/issue1"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:inputType="number"
            android:background="@drawable/edittext"
            android:elevation="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#000000"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"

        android:elevation="6dp"
        android:background="@drawable/linear_layout3"
        android:layout_margin="5dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/issue"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="2dp"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:id="@+id/issue_t2"
            android:background="@drawable/barcode2" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/issue2"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:inputType="text|textMultiLine"
            android:background="@drawable/edittext"
            android:elevation="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#000000" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"

        android:elevation="6dp"
        android:background="@drawable/linear_layout3"
        android:layout_margin="5dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/issue"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ISSUE DATE"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:textIsSelectable="true"
            android:textColor="#000000"
            android:textSize="15dp"
            android:elevation="2dp"
            android:padding="5dp"
            android:layout_marginRight="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/issue3"
            android:gravity="center_vertical|center_horizontal"
            android:inputType="date"
            android:layout_gravity="center"
            android:background="@drawable/edittext"
            android:elevation="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#000000"
            android:focusable="false"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"

            android:elevation="6dp"
            android:background="@drawable/linear_layout3"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/issue"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RETURN DATE"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:textIsSelectable="true"
                android:textColor="#000000"
                android:textSize="15dp"
                android:elevation="2dp"
                android:padding="5dp"
                android:layout_marginRight="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/issue4"
                android:gravity="center_vertical|center_horizontal"
                android:inputType="date"
                android:layout_gravity="center"
                android:background="@drawable/edittext"
                android:elevation="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#000000"
                android:focusable="false"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="1"
        android:layout_gravity="center">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ISSUE BOOK"
            android:id="@+id/issue_button"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:elevation="10dp"
            android:background="@drawable/button4" />


    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
