<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shu.dbms_project.MainActivity"
    android:orientation="vertical"
    android:weightSum="6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ADD NEW BOOK"
            android:id="@+id/b1"
            android:background="@drawable/button"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:src="@drawable/addbook"
            android:elevation="10dp"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="DELETE BOOK"
            android:id="@+id/b2"
            android:background="@drawable/button"
            android:elevation="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:src="@drawable/deletebook"
           />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="2"
        android:gravity="center_vertical|center_horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ADD NEW BOOK"

            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center_vertical|center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DELETE BOOK"

            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ISSUE BOOK"
            android:id="@+id/b3"
            android:background="@drawable/button"
            android:elevation="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:src="@drawable/issue" />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="RETURN BOOK"
            android:id="@+id/b4"
            android:background="@drawable/button"
            android:elevation="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:editable="false"
            android:src="@drawable/returnbook" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ISSUE BOOK"

            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center_vertical|center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RETURN BOOK"

            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SEARCH BOOK"
            android:id="@+id/b5"
            android:background="@drawable/button"
            android:elevation="10dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:src="@drawable/search" />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="RE-ISSUE BOOK"
            android:id="@+id/b12"
            android:background="@drawable/button"
            android:elevation="10dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:src="@drawable/issue" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SEARCH BOOK"

            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center_vertical|center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RE-ISSUE BOOK"

            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SEARCH USER"
            android:id="@+id/b9"
            android:background="@drawable/button"
            android:elevation="10dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:src="@drawable/search_user" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="UPDATE BOOK"
            android:id="@+id/b10"
            android:background="@drawable/button"
            android:elevation="10dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:src="@drawable/update" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SEARCH USER"

            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center_vertical|center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="UPDATE BOOK"

            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ALL ISSUED BOOKS"
            android:id="@+id/b7"
            android:background="@drawable/button"
            android:elevation="10dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:src="@drawable/all" />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ALL AVAILABLE BOOKS"
            android:id="@+id/b6"
            android:background="@drawable/button"
            android:elevation="10dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:src="@drawable/all1" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ALL ISSUED BOOKS"

            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center_vertical|center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ALL AVAILABLE BOOKS"

            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ALL ISSUED BOOKS"
            android:id="@+id/b11"
            android:background="@drawable/button"
            android:elevation="10dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:src="@drawable/all" />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ALL AVAILABLE BOOKS"
            android:id="@+id/b13"
            android:background="@drawable/button"
            android:elevation="10dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:src="@drawable/all1" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RESERVED BOOKS"

            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center_vertical|center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CLEAR RESERVATION"

            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="EXIT"
            android:id="@+id/b8"
            android:background="@drawable/button"
            android:elevation="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:src="@drawable/exit1" />

    </LinearLayout>

</LinearLayout>
</ScrollView>