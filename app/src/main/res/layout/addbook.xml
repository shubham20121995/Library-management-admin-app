<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fillViewport="true"
        android:background="#49ea9b">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="9"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"

        android:elevation="6dp"
        android:background="@drawable/linear_layout"
        android:layout_margin="5dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/addbook"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/t1"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:elevation="2dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:background="@drawable/barcode"
            android:clickable="true" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/e1"
            android:gravity="center_vertical|center_horizontal"
            android:inputType="number"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:background="@drawable/edittext"
            android:layout_marginRight="5dp"
            android:visibility="visible"
            android:elevation="5dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2"
        android:elevation="6dp"
        android:background="@drawable/linear_layout"
        android:layout_margin="5dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/addbook"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BOOK NAME"
            android:id="@+id/t2"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:elevation="2dp"
            android:layout_marginRight="5dp"
            android:padding="5dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/e2"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:background="@drawable/edittext"
            android:layout_marginRight="5dp"
            android:elevation="5dp"
            android:inputType="textMultiLine" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2"
        android:elevation="6dp"
        android:background="@drawable/linear_layout"
        android:layout_margin="5dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/addbook"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AUTHOR"
            android:id="@+id/t3"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:elevation="2dp"
            android:layout_marginRight="5dp"
            android:padding="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/e3"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:background="@drawable/edittext"
            android:layout_marginRight="5dp"
            android:elevation="5dp"
            android:inputType="textMultiLine" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2"
        android:elevation="6dp"
        android:background="@drawable/linear_layout"
        android:layout_margin="5dp"
        android:padding="5dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/addbook"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PUBLICATION"
            android:id="@+id/t4"
            android:gravity="fill_vertical|center_horizontal"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:elevation="2dp"
            android:layout_marginRight="5dp"
            android:padding="5dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/e4"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:background="@drawable/edittext"
            android:layout_marginRight="5dp"
            android:elevation="5dp"
            android:inputType="textMultiLine" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2"
        android:elevation="6dp"
        android:background="@drawable/linear_layout"
        android:layout_margin="5dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/addbook"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="QUANTITY"
            android:id="@+id/t5"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:elevation="2dp"
            android:layout_marginRight="5dp"
            android:padding="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/e5"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:inputType="number"
            android:textColor="#000000"
            android:background="@drawable/edittext"
            android:elevation="5dp"
            android:layout_marginRight="5dp"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"

            android:elevation="6dp"
            android:background="@drawable/linear_layout"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/addbook"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="EDITION"
                android:id="@+id/t7"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="#000000"
                android:elevation="2dp"
                android:layout_marginRight="5dp"
                android:padding="5dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/e6"
                android:gravity="center_vertical|center_horizontal"
                android:inputType="number"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:background="@drawable/edittext"
                android:layout_marginRight="5dp"
                android:visibility="visible"
                android:elevation="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"

            android:elevation="6dp"
            android:background="@drawable/linear_layout"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/addbook"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="PURCHASE DATE"
                android:id="@+id/t8"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="#000000"
                android:elevation="2dp"
                android:layout_marginRight="5dp"
                android:padding="5dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/e7"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:background="@drawable/edittext"
                android:layout_marginRight="5dp"
                android:visibility="visible"
                android:elevation="5dp"
                android:enabled="true"
                android:focusable="false" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"

            android:elevation="6dp"
            android:background="@drawable/linear_layout"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/addbook"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="PRICE"
                android:id="@+id/t9"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="#000000"
                android:elevation="2dp"
                android:padding="5dp"
                android:layout_marginRight="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/e8"
                android:gravity="center_vertical|center_horizontal"
                android:inputType="number"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:background="@drawable/edittext"
                android:elevation="5dp"
                android:layout_marginRight="5dp"
                android:visibility="visible"
                />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="1"
        android:layout_gravity="center"

        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ADD BOOK"
            android:id="@+id/book_button"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:textSize="15dp"

            android:textColor="#000000"
            android:elevation="10dp"
            android:background="@drawable/button2"
            android:layout_margin="5dp" />


    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
